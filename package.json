{
  "name": "root",
  "private": true,
  "scripts": {
    "lint": "lerna run lint && eslint ./examples",
    "preversion": "yarn run lint",
    "publish:patch": "lerna version patch --force-publish --no-changelog && lerna publish from-package",
    "publish:minor": "lerna version minor --force-publish --no-changelog && lerna publish from-package",
    "publish:major": "lerna version major --force-publish --no-changelog && lerna publish from-package",
    "core:watch": "lerna run core:watch --stream",
    "react:watch": "lerna run react:watch --stream",
    "preact:watch": "lerna run preact:watch --stream",
    "examples:extract": "node packages/react-localized-extractor/lib/react-localized-extractor.js -l ru -s ./examples/src/**/*.tsx -o ./examples/locales -a.gettext __ -a.ngettext __n -a.pgettext __p -a.npgettext __np",
    "examples:react": "webpack serve --config examples/webpack.config.react.js",
    "examples:preact": "webpack serve --config examples/webpack.config.preact.js",
    "examples:docs": "lerna run build && webpack --config examples/webpack.config.docs.js"
  },
  "devDependencies": {
    "@types/react": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "date-fns": "^2.23.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gettext-parser": "^4.0.4",
    "html-webpack-plugin": "^5.3.2",
    "lerna": "^4.0.0",
    "microbundle": "^0.13.3",
    "preact": "^10.5.14",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0"
  }
}
